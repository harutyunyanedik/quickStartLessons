<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background_white_10"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/imageUnchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/button_background"
            android:button="@drawable/selector_favorite_checkbox"
            android:padding="17dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/FCSpecials"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toStartOf="@+id/imageNext"
            app:layout_constraintStart_toEndOf="@+id/imageUnchecked"
            tools:ignore="MissingConstraints" />

<ImageView
    android:id="@+id/imageNext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow_right"
    android:padding="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="ContentDescription,MissingConstraints" />

        <View
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/_60dp"
            app:layout_constraintTop_toBottomOf="@+id/imageNext"
           />
        <ImageView
            android:id="@+id/expendedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            android:src="@drawable/ic_favorite_unchecked"
            app:layout_constraintTop_toBottomOf="@id/rootLayout"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>