<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background_white_10"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/imageUnchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/button_background"
            android:paddingEnd="@dimen/_15dp"
            android:src="@drawable/ic_favorite_unchecked"
            android:padding="20dp"
            android:checked="false"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/FCSpecials"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toStartOf="@+id/imageNext"
            app:layout_constraintStart_toEndOf="@+id/imageUnchecked"
            tools:ignore="MissingConstraints" />

<ImageView
    android:id="@+id/imageNext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow_right"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
          android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/_60dp"
            app:layout_constraintTop_toBottomOf="@+id/imageNext"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>