<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="@string/text1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_goneMarginStart="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/text2"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            android:layout_margin="5dp"
            >
        </TextView>

        <EditText
            android:id="@+id/textForMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_margin="5dp"
            android:hint="@string/text3"
           android:inputType="textEmailSubject"
            android:textColorHint="@color/white_50"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            android:background="@drawable/edittext_stile"
            />

        <EditText
            android:id="@+id/textForPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="8sp"
            android:layout_margin="5dp"
            android:hint="@string/text4"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textForMail"
            android:background="@drawable/edittext_stile"
            android:textColorHint="@color/white_50"
            android:autofillHints="" />


<CheckBox
    android:id="@+id/checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/textForPassword"
    android:layout_margin="25dp"
    tools:ignore="MissingConstraints"
    android:text="@string/text5"
    android:textSize="16sp"
    android:textColor="@color/white"
    android:padding="8dp"

    />


        <Button
            android:id="@+id/buttonForSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_stile"
            android:text="@string/text6"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"

           app:layout_constraintTop_toBottomOf="@id/checkbox"

            tools:ignore="MissingConstraints"
            />

        <Button
            android:id="@+id/buttonForForgive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="36dp"
            android:background="@color/purple_700"
            android:text="@string/text7"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonForSignIn"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="52dp"
            android:padding="12dp"
            android:text="@string/text8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>