<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@drawable/baseline_star_border_24"
            tools:ignore="MissingConstraints"
             />

        <TextView
            android:id="@+id/ArsenalFCSpecials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/name_lastname_size"
            android:text="@string/Arsenal_FC_Specials"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/Recycler_start"
            android:padding="1dp"
            android:textColor="@color/white"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/outline_arrow_forward_lesson_android"
            app:layout_constraintEnd_toEndOf="parent"
             android:padding="1dp"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/ArsenalFCSpecials"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>