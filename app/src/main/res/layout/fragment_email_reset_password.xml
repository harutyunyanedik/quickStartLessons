<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/constraint_layout_paddin"
        tools:context=".fragments.EmailResetPasswordFragment">

        <TextView
            android:id="@+id/textViewResetEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_via_email"
            android:textSize="@dimen/text_view_24"
            android:textStyle="bold"
            android:textColor="@color/text_view_text_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/email_text_size"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewResetEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/edit_text_shape"
            android:hint="sample@email.com"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#33FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/textViewEmail" />

        <Button
            android:id="@+id/buttonResetPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/reset_password"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"
            android:textColor="#B3FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>