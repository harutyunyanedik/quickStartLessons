<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:add="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".android.ftagments.EmailResetPasswordFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/headerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five"
                android:layout_marginTop="@dimen/ten"
                android:padding="@dimen/five"
                android:text="Reset password viaEmail"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/requestToWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Email"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                add:layout_constraintTop_toBottomOf="@+id/headerEmail"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editEmail"
                android:hint="Sample@email.com"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                android:padding="@dimen/twenty"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:inputType="text"
                add:layout_constraintEnd_toEndOf="parent"
                add:layout_constraintTop_toBottomOf="@+id/requestToWrite"
                add:layout_constraintStart_toStartOf="parent"
                tools:ignore="Autofill,HardcodedText,MissingConstraints,RtlHardcoded,TextFields" />

            <Button
                android:id="@+id/sendEmail"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@drawable/button_style"
                android:text="Reset password"
                android:textColor="@color/white"
                android:textSize="20sp"
                add:layout_constraintEnd_toEndOf="parent"
                add:layout_constraintStart_toStartOf="parent"
                add:layout_constraintTop_toBottomOf="@+id/editEmail"
                tools:ignore="HardcodedText,MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>