<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.account.SettingsFragment"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/_36sp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/changeLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_language"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sp"
            android:textStyle="italic"
            android:layout_margin="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/toolBar"
            app:layout_constraintStart_toStartOf="parent"/>

            <RadioGroup
                android:id="@+id/rg_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/changeLanguage"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/lg_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/english_language"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_8dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/lg_russian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/russian_language"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_8dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/lg_armenian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/armenian_language"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_8dp"
                    android:checked="true"/>

            </RadioGroup>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/teal_700"
            android:text="@string/saveButton"
            android:textSize="@dimen/_20sp"
            app:layout_constraintTop_toBottomOf="@id/rg_languages"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>