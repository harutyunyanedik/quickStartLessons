<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAccount"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/backButton"
            android:layout_width="@dimen/_35dp"
            android:layout_height="@dimen/_35dp"
            android:background="@drawable/ic_back"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:text="@string/personal_data"
            android:textColor="@color/white"
            android:textSize="@dimen/_36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingLeft="@dimen/_8dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/account_user_name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAccount"
        tools:ignore="MissingConstraints,RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/userMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:paddingLeft="@dimen/_8dp"
        android:text="@string/account_mail"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:ignore="MissingConstraints,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:paddingLeft="@dimen/_8dp"
            android:text="(+374)94 607290"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp"
            app:layout_constraintTop_toBottomOf="@+id/userMail"
            tools:ignore="ContentDescription,HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:paddingLeft="@dimen/_8dp"
        android:text="W"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:paddingLeft="@dimen/_8dp"
        android:text="28.06.1985"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sp"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry,UseCompatTextViewDrawableXml" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>