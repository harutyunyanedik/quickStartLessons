<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:text=""
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:text=""
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation" />

    <Button
        android:id="@+id/clear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="BACKSPACE"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/clear"
        app:layout_constraintTop_toTopOf="@id/clear" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clear" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/clear"

        />

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/backspace" />

    <Button
        android:id="@+id/division"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/backspace" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/teal_700"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button8"

        />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/division"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button5"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6"

        />

    <Button
        android:id="@+id/minus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/multiplication"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="="
        app:layout_constraintLeft_toRightOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button3"

        />

    <Button
        android:id="@+id/addition"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@id/buttonEqual"
        app:layout_constraintTop_toBottomOf="@id/minus"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>