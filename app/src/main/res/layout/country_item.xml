<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="16dp"
        android:background="#1AFFFFFF">

        <ImageView
            android:id="@+id/imageViewFlag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textViewCountryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            style="@style/text_style"
            tools:text="Armenia"
            app:layout_constraintStart_toEndOf="@id/imageViewFlag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewCount"/>

        <TextView
            android:id="@+id/textViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style"
            android:layout_marginEnd="16dp"
            tools:text="7"
            app:layout_constraintEnd_toStartOf="@id/imageView_arrow_down"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/imageView_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChampionships"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/championship_item"
            app:layout_constraintTop_toBottomOf="@id/textViewCountryName"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>