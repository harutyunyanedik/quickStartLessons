<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:padding="@dimen/margin_16dp"
        tools:context=".module.resetpassword.email.ResetPasswordEmailFragment">

        <TextView
            android:id="@+id/textViewResetPasswordEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resetpassword_via_email"
            android:textColor="@color/color_1_70"
            android:textSize="@dimen/_20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewEnterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:text="@string/email"
            android:textColor="@color/color_1_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewResetPasswordEmail" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/getEmailLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:hint="@string/sample_email_com"
            android:textColorHint="@color/color_1_40"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color_1_40"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewEnterEmail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/getEmail"
                style="@style/edit_text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:text="@string/reset_password"
            android:textAllCaps="false"
            android:textColor="@color/color_1_70"
            app:layout_constraintTop_toBottomOf="@id/getEmailLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>