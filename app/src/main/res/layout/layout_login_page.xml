<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700">

        <TextView
            android:id="@+id/login_page_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="@string/login_page_account"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            app:layout_editor_absoluteX="4dp"
            app:layout_editor_absoluteY="48dp"/>
        
        <TextView
            android:id="@+id/login_page_sign_in_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:text="@string/login_page_sign_in_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/login_page_account"
            android:textAllCaps="true"/>
        <EditText
            android:id="@+id/login_page_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Email/Username"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/login_page_sign_in_text"
            android:background="@drawable/background_login_page"/>
        <EditText
            android:id="@+id/login_page_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/login_page_username"
            android:background="@drawable/background_login_page" />

        <CheckBox
             android:id="@+id/checkbox_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:padding="8dp"
            android:text="@string/login_page_remember_me"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_page_password"/>

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style"
            android:text="@string/button_sign_in"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_remember_me"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/login_page_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="52dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:text="@string/login_page_forgot_password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/button_sign_in"/>
        <Button
            android:id="@+id/button_contact_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="200dp"
            android:background="@color/purple_700"
            android:padding="12dp"
            android:text="@string/button_contact_support"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/login_page_forgot_password"
            app:layout_editor_absoluteX = "125dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>