<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".fragments.SmsResetPasswordFragment">

        <TextView
            android:id="@+id/textViewResetSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset password via SMS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_enter_number"
            android:textColor="#99FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewResetSms"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextPhoneCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:inputType="phone"
            android:background="@drawable/edit_text_shape"
            android:text="@string/_374"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#33FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/textViewSMS"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:inputType="phone"
            android:background="@drawable/edit_text_shape"
            android:hint="@string/xx_xxx_xxx"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#33FFFFFF"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewSMS"
            app:layout_constraintStart_toEndOf="@id/editTextPhoneCode"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonResetPasswordSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/send_sms"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"
            android:textColor="#B3FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/editTextPhoneNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>