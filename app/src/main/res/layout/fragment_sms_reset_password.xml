<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:context=".android.fragment.SmsResetPasswordFragment">

        <TextView
            android:id="@+id/textResetSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset password  via SMS"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/textSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter phone number"
            android:textColor="@color/white_10"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textResetSms"/>
        <EditText
            android:id="@+id/phoneNumberCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:layout_marginTop="8dp"
            android:inputType="phone"
            android:text="+374"
            android:padding="2dp"
            android:textColor="@color/white_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSms"/>
        <EditText
            android:id="@+id/textPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:hint="xx_xxx_xxx"
            android:padding="2dp"
            android:background="@color/grey"
            android:textColor="@color/white_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSms"
            app:layout_constraintStart_toEndOf="@id/phoneNumberCode"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Send Sms"
            app:layout_constraintTop_toBottomOf="@id/textPhoneNumber"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>