<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="android:textColorHint">@color/app_text</item>
    </style>
    <style name="signInButton">
        <item name="android:background">@drawable/sign_in_button</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="resetButton">
        <item name="android:background">@drawable/reset_button</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="checkBox">
        <item name="android:textColor">@color/app_text</item>
        <item name="android:buttonTint">@color/app_text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>