<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumsFragment">

    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.example.quickstartlessons.module.albums.presentation.AlbumsFragment"
        tools:layout="@layout/fragment_albums"
        android:label="AlbumsFragment" >
        <action
            android:id="@+id/action_albumsFragment_to_albumDetailsFragment"
            app:destination="@id/albumDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name= "com.example.quickstartlessons.module.albums.albumDetails.AlbumDetailsFragment"
        android:label="fragment_album_details"
        tools:layout="@layout/fragment_album_details">

        <argument
            android:name ="albumId"
            app:argType = "string"/>

        <action
            android:id="@+id/action_albumDetailsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.quickstartlessons.module.albums.albumDetails.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">

        <argument
            android:name ="albumId"
            app:argType = "string"/>

    </fragment>

</navigation>